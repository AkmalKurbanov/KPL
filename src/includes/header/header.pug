header.header
  .container
    .header__wrap
      a.header__logo(href="#")
        img(src="assets/img/logo.svg" alt="") 
        span Кыргызская <br> Премьер Лига
      .team
        .header__top
          .social
            ul
              each val, index in ['fab fa-instagram', 'fab fa-facebook-square', 'fab fa-twitter','fab fa-vk']
                li
                  a(href="#")
                    i(class=val)
          .lang
            ul
              li.active
                a(href="#") Кыр
              li
                a(href="#") Рус
        .team__wrap
          each val, index in ['assets/img/KPL-teams/Abdysh-Ata.png','assets/img/KPL-teams/Alai.png','assets/img/KPL-teams/Lider.png','assets/img/KPL-teams/Alga.png','assets/img/KPL-teams/Dordoi.png','assets/img/KPL-teams/Ilbirs.png','assets/img/KPL-teams/KaraBalta.png','assets/img/KPL-teams/Neftchi.png']
            .team__item
              a(href="#" title="#")
                img(src=val, alt="")
    nav.nav
      ul
        li.active
          a(href="#") Новости        
        li.comprisingTable клубы
          i.fal.fa-angle-down          
        li.comprising турниры
          i.fal.fa-angle-down
          ul
            li.active
              a(href="#") Кыргызская премьер-лига
            li
              a(href="#") первая лига Кыргызстана
            li
              a(href="#") кубок Кыргызстана
            li
              a(href="#") супер кубок Кыргызстана
        li
          a(href="#") медиа
        li.comprising о кпл 
          i.fal.fa-angle-down
          ul
            li.active
              a(href="#") персонал
            li
              a(href="#") официальные лица
            li
              a(href="#") документы
            li
              a(href="#") стадионы
      .search-wrap
        .search-btn
          i.fas.fa-search
    .club-list-wrap.club  
      .club__list
        mixin team(logo, name)
          a.club__item(href="#")
            .club__img
              img(src= logo)  
            .club__name= name 
        +team('assets/img/KPL-teams/Abdysh-Ata.png','АБДЫШ-АТА')
        +team('assets/img/KPL-teams/Alai.png','АЛАЙ')
        +team('assets/img/KPL-teams/Lider.png','АКАДЕМИЯ ЛИДЕР')
        +team('assets/img/KPL-teams/Alga.png','АЛГА')
        +team('assets/img/KPL-teams/Dordoi.png','ДОРДОЙ')
        +team('assets/img/KPL-teams/Ilbirs.png','ИЛБИРС')
        +team('assets/img/KPL-teams/KaraBalta.png','КАРА-БАЛТА')
        +team('assets/img/KPL-teams/Neftchi.png','НЕФТЧИ')
    .search 
      form(action="#")
        input.search__input(type="search" placeholder="Поиск")
        button.search__btn(type="submit")
          i.fas.fa-search



