extends layout/main/main
block title
  | news
block main
  .wrapper
    .content
      include includes/header/header
      .news
        .container
          include includes/breadcrumbs/breadcrumbs
          +breadcrumbs(['Главная'], 'Новости')
          h2.heading.heading--heading-ttu
            |НОВОСТИ КЫРГЫЗСКОЙ ПРЕМЬЕР-ЛИГИ
          .cols-wrap
            .main-col.main-col--news
              a.news-preview.preview(href="#")
                img(src="../../assets/img/news/news-main.jpg" alt="")
                .preview__title-news
                  |Дордой в погоне за лидером!
              mixin article(img,date,title,subtitle)
                .news__article
                  .news__article-img-wrap
                    .news__article-img
                      a(href="#")
                        img(src=img, alt="")
                  .news__article-info
                    .news__article-date
                      span=date
                    .news__article-title
                      a(href="#")=title
                    .news__article-subtitle
                      p=subtitle
              +article('assets/img/news/artcl7.jpg','27.10.2019','Академия Лидер - Нефтчи - 3:3. Обзор матча.','Перестрелка в Оше закончилась ничьей')
